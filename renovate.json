{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "packageRules": [
    {
      "extends": "monorepo:kotlin",
      "matchPackagePatterns": [
        "androidx.compose.compiler:compiler",
        "org.jetbrains.kotlin.*",
        "com.google.devtools.ksp"
      ],
      "groupName": "kotlin"
    }
  ]
}